<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.dao.user.UserDao">
    <select id="getAll" resultType="User">
        SELECT * FROM smbms_user
    </select>

    <select id="findByParam" parameterType="map" resultType="com.springboot.entity.user.User">
        SELECT * FROM smbms_user
        <trim prefix="where" suffixOverrides="and|or">
            <if test="id!=null">
                id = #{id} AND
            </if>
            <if test="userName!=null">
                userName = #{userName} AND
            </if>
            <if test="userCode!=null">
                userCode = #{userCode} AND
            </if>
        </trim>
    </select>

    <select id="findByMap" parameterType="map" resultType="user">
        SELECT * FROM smbms_user
        <trim prefix="where" suffixOverrides="and|or">
            <if test="birthday!=null">
                birthday = #{birthday}
            </if>
            <if test="id!=null">
                id = #{id} AND
            </if>
            <if test="userName!=null">
                userName = #{userName} AND
            </if>
            <if test="userCode!=null">
                userCode = #{userCode} AND
            </if>
        </trim>
    </select>


    <insert id="addUser" parameterType="User">
        INSERT INTO smbms_user(userCode,userName,birthday,userPassword)
        VALUES(#{userCode},#{userName},#{birthday},#{userPassword})
    </insert>

    <update id="updateUser" parameterType="user">
        UPDATE smbms_user
        <trim prefix="SET" suffix="where id=#{id}" suffixOverrides=",">
            <if test="userName!=null">
                userName = #{userName},
            </if>
            <if test="userPassword!=null">
                userPassword = #{userPassword}
            </if>
        </trim>
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM smbms_user WHERE id = #{id}
    </delete>
</mapper>